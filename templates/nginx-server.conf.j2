server {
    listen 80 default_server;
    server_name {{ nginx_docker_server_host }};

    client_header_buffer_size 4k;

    location /nginx_status {
        stub_status on;
        allow 127.0.0.1;
        allow 172.16.0.0/14;
        deny all;
    }

    include includes/{{ nginx_docker_conf_name }}/*.conf;
}
